// Prisma Schema
// @see https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==============================================================================
// USER & AUTH MODELS
// ==============================================================================

enum UserRole {
  USER
  ADMIN
  MODERATOR
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  password      String? // Nullable for OAuth users
  role          UserRole  @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  accounts    Account[]
  sessions    Session[]
  runs        Run[]
  progression UserProgression?

  @@index([email])
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ==============================================================================
// GAME MODELS
// ==============================================================================

enum RunStatus {
  IN_PROGRESS
  VICTORY
  DEFEAT
  ABANDONED
}

model Run {
  id     String    @id @default(cuid())
  userId String
  status RunStatus @default(IN_PROGRESS)
  seed   String
  floor  Int       @default(1)
  room   Int       @default(0)
  gold   Int       @default(0)

  // Full game state snapshot (JSON) for resume
  state Json

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  endedAt   DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@map("runs")
}

model CardDefinition {
  id           String  @id // e.g. "strike", "fireball"
  name         String
  type         String // ATTACK | SKILL | POWER
  energyCost   Int
  inkCost      Int     @default(0)
  targeting    String // SINGLE_ENEMY | ALL_ENEMIES | SELF | SINGLE_ALLY | ALL_ALLIES
  rarity       String // STARTER | COMMON | UNCOMMON | RARE
  description  String
  effects      Json // Array of effect descriptors
  inkedVariant Json? // Nullable: inked version effects + description

  isStarterCard Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("card_definitions")
}

model EnemyDefinition {
  id        String  @id // e.g. "skeleton_warrior"
  name      String
  maxHp     Int
  speed     Int
  abilities Json // Array of ability descriptors
  isBoss    Boolean @default(false)
  tier      Int     @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("enemy_definitions")
}

model RelicDefinition {
  id          String @id // e.g. "ink_well"
  name        String
  description String
  rarity      String // COMMON | UNCOMMON | RARE | BOSS
  effects     Json // Array of passive effect descriptors

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("relic_definitions")
}

model AllyDefinition {
  id        String @id
  name      String
  maxHp     Int
  speed     Int
  abilities Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("ally_definitions")
}

model UserProgression {
  id               String   @id @default(cuid())
  userId           String   @unique
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  // Partial<Record<BiomeResource, number>> — ressources accumulées
  resources        Json     @default("{}")
  // string[] — IDs des histoires débloquées
  unlockedStoryIds Json     @default("[]")
  totalRuns        Int      @default(0)
  wonRuns          Int      @default(0)
  lostRuns         Int      @default(0)
  abandonedRuns    Int      @default(0)
  // Record<difficultyLevel, victories>
  winsByDifficulty Json     @default("{}")
  // Record<difficultyLevel, best completion time in ms>
  bestTimeByDifficultyMs Json @default("{}")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_progressions")
}
